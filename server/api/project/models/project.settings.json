{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Proyectos",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "client": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "client",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "hero_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "home_image": {
      "type": "component",
      "repeatable": false,
      "component": "gallery.portfolio-gallery"
    },
    "year": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "tag": {
      "type": "component",
      "repeatable": true,
      "component": "tags.service-tag"
    },
    "services": {
      "via": "project",
      "collection": "service"
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "component": "gallery.project-images"
    }
  }
}
